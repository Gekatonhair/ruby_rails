<h4>Редактирование пользователя</h4>
<br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">  
    <%= f.label :password, "Почта" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "Почта", :class => "form-control" %>   
  </div>


  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="form-group">Ожтдается подтверждение для: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">   
    <%= f.label :password, "Пароль" %> <i>(Оставьте пустым, если вы не хотите менять пароль)</i><br />
    <%= f.password_field :password, autocomplete: "Новый пароль", :placeholder => "Пароль", :class => "form-control" %>
    <% if @minimum_password_length %>
      <small class="form-text text-muted">(<%= @minimum_password_length %>  символов минимум)</small>
    <% end %>
  </div>

  <div class="form-group">   
    <%= f.password_field :password_confirmation, autocomplete: "Повторите пароль", :placeholder => "Повторите пароль", :class => "form-control" %>   
  </div>

   <div class="form-group"> 
    <%= f.label :password, "Ваш текущий пароль, что бы сохранить изменения " %>  
    <%= f.password_field :current_password, autocomplete: "Ваш текущий пароль", :placeholder => "Ваш текущий пароль", :class => "form-control" %>   
  </div>

  <div class="actions">  
    <%= f.submit(:class => 'btn btn-primary',  :value => "Обновить" ) %>     
  </div>
<% end %>

<%= link_to 'Назад', :back, :class => "btn btn-sm btn-outline-secondary" %>

<br>
<hr>
<br>

<div class="alert alert-danger" role="alert">
  <h4>Удаление аккаунта</h4>
  <p>Может, не надо?
    <%= button_to "Удалить аккаунт", registration_path(resource_name), data: { confirm: "Вы уверены?" }, method: :delete, :class => "btn btn-danger" %>
  </p>
</div>


